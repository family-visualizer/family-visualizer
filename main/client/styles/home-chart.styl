.homeWrapper
	display flex 
	flex-direction column
	height 900px
	width 100%
	z-index -10

.homeTop
	display flex
	flex-direction row
	justify-content	space-around
	height 45%
	// background-image url('../../images/Collage_shortened.jpg')
	background-size cover
	background-repeat no-repeat

.homeTopText
	display flex
	flex-direction  column
	justify-content center
	align-items space-around
	width 30%
	height 85%
	border-radius 10px
	background-color gray

.homeMiddle
	height 15%
	width 100%
	display flex
	flex-direction  row

.homeBottom
	display flex
	flex-direction  row
	height 30%

.homeBottomPad
	display flex
	flex-direction  row
	height 10%

.homeImg
	z-index -50


/* Format X and Y Axis */
.home-chart-axis
	display none
	width 5px
	fill none
	stroke black
	shape-rendering crispEdges

.axis text
	font-family sans-serif
	font-size 11px

#wrapper
	min-height 100%
	// position relative
	display flex
	flex-direction column



#heading-holder
	background-color white
	width 380px
	height 285px
	// margin-left 40px
	border-radius 10px
	// margin-top 30px
	padding-top 25px
	padding-left 25px
	opacity .9
	padding-right 25px
	// padding-bottom 35px

#heading-holder h1
	margin 0
	color black
	padding 0
	margin-top 0
	line-height 20px
	margin-left 0 auto
	text-align center

#heading-holder i
	margin-left 40px
	margin-right 40px
	margin-top 20px

#heading-holder hr
	margin-top 15px

#visualize
	font-weight 400
	font-size 1.8em
	margin 0
	

#your-family
	font-size 3.0em
	margin 0

#main-collage
	width 100%
	z-index -100
	max-height 443px
	min-height 410px
	position absolute
	
#collage-holder
	position relative
	z-index -100
	opacity .5
	display flex
	flex-direction row
	justify-content space-around

.home-page-footer
	width 100%
	height 50px
	// position absolute
	bottom 0
	background-color #0072bc
	color white
	text-align center

.home-page-footer i
	margin-left 10px
	margin-right 10px
	margin-top 10px

.home-page-footer i:hover
	cursor pointer

#fade-background
	width 100%
	height 100%
	position absolute
	margin-top 60px
	top 0px
	right 0px
	z-index 500
	background-color rgba(250, 250, 250, .8)
	-webkit-animation-name fader
	animation-name fader
	animation-duration 3s
	-webkit-animation-duration 3s

#chart-holder
	border-left 4px solid black
	border-bottom 4px solid black
	width 600px
	height 250px
	top 80px
	right 60px
	position absolute
	-webkit-animation-name fadein
	animation-name fadein
	animation-duration 6s
	-webkit-animation-duration 6s

#home-page-chart
	width 300px



/* Chrome, Safari, Opera */
@-webkit-keyframes fader
	    0%
			background-color: rgba(250, 250, 250, 0)

	    100%
			background-color: rgba(250, 250, 250, .8)


/* Standard syntax */
@keyframes fader
	    0%
			background-color: rgba(250, 250, 250, 0)

	    100%
			background-color: rgba(250, 250, 250, .8)



@-webkit-keyframes fadein
	    0%
			opacity: 0

	    100%
			opacity: 1


/* Standard syntax */
@keyframes fadein
		0%
			opacity: 0

		100%
			opacity: 1
