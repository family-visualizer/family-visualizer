/* Format X and Y Axis */
.axis path
.axis line
	display none
	width 5px
	fill none
	stroke black
	shape-rendering crispEdges

.axis text
	font-family sans-serif
	font-size 11px

#main-collage
	width 100%
	z-index -100


#collage-holder
	position relative
	z-index -100
	position relative


#fade-background
	width 100%
	height 460px
	position absolute
	top 0px
	right 0px
	background-color rgba(250, 250, 250, .8)
	-webkit-animation-name fader
	animation-name fader
	animation-duration 3s
	-webkit-animation-duration 3s

#chart-holder
	border-left 4px solid black
	border-bottom 4px solid black
	width 600px
	height 250px
	top 80px
	right 60px
	position absolute
	-webkit-animation-name fadein
	animation-name fadein
	animation-duration 6s
	-webkit-animation-duration 6s

#home-page-chart
	width 300px



/* Chrome, Safari, Opera */
@-webkit-keyframes fader
	    0%
			background-color: rgba(250, 250, 250, 0)

	    100%
			background-color: rgba(250, 250, 250, .8)


/* Standard syntax */
@keyframes fader
	    0%
			background-color: rgba(250, 250, 250, 0)

	    100%
			background-color: rgba(250, 250, 250, .8)



@-webkit-keyframes fadein
	    0%
			opacity: 0

	    100%
			opacity: 1


/* Standard syntax */
@keyframes fadein
		0%
			opacity: 0

		100%
			opacity: 1
