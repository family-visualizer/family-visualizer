.lifespanContainerTop
	display flex
	flex-direction row
	justify-content space-around
	align-items center
	// margin 20px 0px 20px 0px
	height: 100%;
	width: 100%;
	

.lifespanChartTitle
	text-align center
	margin-bottom 10px
	font-size 25px
	font-weight bold
	width 100%

.lifespanChartLeft
	display flex
	flex-direction column
	justify-content	space-around
	align-items flex-start
	margin 20px
	

.lifespanChartRightOutside
	display flex
	flex-direction column
	align-items center
	border 1px solid grey
	height 100%
	width 222px
	margin-bottom: 85px;
	margin-right: 35px;

.lifespanChartRightTop
	background-color white
	width 90%
	margin-top: 10px;
	border-radius 3px

.lifespanChartRightBottom
	background-color white
	width 90%
	margin 10px
	border-radius 3px

.lifespanSideTitle 
	font-size 20px
	font-weight 300
	text-align center

.lifespanChartSide div 
	padding-left: 20px
	padding-right: 20px
	display flex
	flex-direction column
	justify-content space-around
	align-items space-around
	text-align center
	margin-bottom 20px


.statName
	font-weight 300
	display flex
	flex-direction row
	align-items center
	margin-left: 16px;
	
	
.stat 
	font-weight 400
	height 25px
	text-align center
	font-size 20px
	margin-left: 15px;

.handle
	cursor: pointer	



.slider .handle path {
//   stroke: #0072bc;
//   stroke-width: 3px;
  pointer-events: none;
}


.slider .handle text {
  fill: black;
  text-align: center;
  font-size: 20px;
}

.lifespanYAxis path {
	// display: none;
}

.lifespanXAxis g text 
	font-size .7em

.lifespanYAxis g text
	font-size .7em

.axisLine path
	stroke black
	stroke-width 1px
	fill none
	
.personCircle:hover
	opacity 1

#lifespanTooltip {
			display: flex;
			flex-direction: row;
			justify-content: center;
			align-items: center;
			position: absolute;
			top: 0;
			left: 0;
			z-index: 300;
			margin: 0;
			padding: 10px;
			color: white;
			font-size: 12px;
			text-align: center;
			background-color: rgba(0, 0, 0, 0.75);
			opacity: 0;
			pointer-events: none;
		}
		
.radioButtonForm
	display flex
	flex-direction row
	justify-content center
	margin-top: 15px;

.radioButtonForm label
	margin-right 10px
	margin-left 10px
	margin-bottom 10px
	text-align center
	font-weight 300

.axisLabel
	font-weight bold

.lifespanContainerBottom
	display flex
	flex-direction column
	justify-content center
	align-content center
	padding 20px
	background-color #0072bc
	color white	

.lifespanContainerBottom h2
	text-align center

.lifespanContainerBottom li 
	font-size 20px
	margin 20px


.lifespanChartDescription
	display flex
	flex-direction column
	align-items center