.node 
  cursor pointer


.node:hover 
  stroke #000
  stroke-width 1.5px


.node--leaf 
  fill white


.label 
  font 11px "Helvetica Neue", Helvetica, Arial, sans-serif
  text-anchor middle
  text-shadow 0 1px 0 #fff, 1px 0 0 #fff, -1px 0 0 #fff, 0 -1px 0 #fff


.label, .node--root, .node--leaf 
  pointer-events none
  
.gender-toggle
	padding-top 50px
	font-size 1.1em
	text-align center
	float left
	width 40%
	
	table
		margin 0 auto
		
.zoom-chart-settings-wrapper
	border 1px solid red
	

.zoom-chart-settings button {
    cursor pointer
    margin: 0 auto;
    font-size: 1.0rem;
    padding: .75rem 1.5rem;
    display: block;
    background-color: #1bb54a;
    border: 1px solid transparent;
    color: #ffffff;
    font-weight: 300;
    -webkit-border-radius: 3px;
    border-radius: 3px;
    -webkit-transition: all 0.3s ease-in-out;
    -moz-transition: all 0.3s ease-in-out;
    transition: all 0.3s ease-in-out;
}

.zoom-chart-settings button:hover {
  background-color: #ffffff;
  color: #1bb54a;
  border-color: #1bb54a;
}

.zoom-chart-wrapper
	float right
	width 55%

