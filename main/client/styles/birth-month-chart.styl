
.birth-month-header
	width 90%
	margin 0 auto
	// border 2px solid orange
	height 60px

.birth-month-header h1
	padding 0
	margin-top 10px
	margin-bottom 5px
	font-weight 300

.birth-month-container
	margin 0 auto
	width 90%

#settings
	float left
	height 100vh
	width 26%
	// border 1px solid red

#chart-container
	height 100vh
	float right
	width 72%
	position relative
	// border 1px solid blue

#svg
	position absolute
	top 0
	right 0
	margin-right 50px


#month-checks
	float left
	margin-right 100px

#gen-checks
	float left

#main {
  float: left;
  width: 750px;
}

#sidebar {
  float: right;
  width: 100px;
}

#sequence {
  width: 600px;
  height: 70px;
}

#legend {
  padding: 10px 0 0 3px;
}

#sequence text, #legend text {
  font-weight: 600;
  fill: #fff;
}

#chart {
  position: relative;
}

#chart path {
  stroke: #fff;
}

#explanation {
  position: absolute;
  top: 260px;
  left: 305px;
  width: 140px;
  text-align: center;
  color: #666;
  z-index: -1;
}

#percentage {
  font-size: 2.5em;
}

.main
	opacity .2

.selected
	opacity 1
