/* Format X and Y Axis */
.home-chart-axis
	display none
	width 5px
	fill none
	stroke black
	shape-rendering crispEdges

.axis text
	font-family sans-serif
	font-size 11px

#home-page-wrapper
	min-height 100%
	position relative
	min-width 1235px

#heading-holder
	background-color white
	width 28%
	height 285px
	margin-left 6%
	border-radius 10px
	// margin-top 30px
	padding-top 25px
	padding-left 25px
	opacity .9
	padding-right 25px
	display inline-block

#heading-holder h1
	margin 0
	color black
	padding 0
	margin-top 0
	line-height 20px
	margin-left 0 auto
	text-align center

#heading-holder i
	opacity 0
	margin-left 40px
	margin-right 40px
	margin-top 20px
	animation-delay 8s

	-webkit-animation-delay 8s
	-webkit-animation-name fadein
	animation-name fadein
	animation-duration 6s
	-webkit-animation-duration 6s

#heading-holder hr
	margin-top 15px

#visualize
	font-weight 400
	font-size 1.8em

#your-family
	font-size 3.0em

#main-collage
	width 100%
	z-index -100


#collage-holder
	position relative
	z-index -100
	position relative

.home-page-footer
	width 100%
	height 50px
	position absolute
	bottom 0
	background-color #0072bc
	color white
	text-align center

.home-page-footer i
	margin-left 10px
	margin-right 10px
	margin-top 10px

.home-page-footer i:hover
	cursor pointer

#fade-background
	width 100%
	height 100%
	position absolute
	top 0px
	padding-top 55px
	right 0px
	background-color rgba(250, 250, 250, 0)
	animation-delay 5s
	-webkit-animation-delay 5s
	-webkit-animation-name fader
	animation-name fader
	animation-duration 20s
	-webkit-animation-duration 20s

#chart-holder
	opacity 0
	border-left 4px solid black
	border-bottom 4px solid black
	width 600px
	height 250px
	display inline-block
	margin-left 10%
	animation-delay 5s
	-webkit-animation-delay 5s
	-webkit-animation-name fadein
	animation-name fadein
	animation-duration 20s
	-webkit-animation-duration 20s

#home-page-chart
	width 300px

/* Chrome, Safari, Opera */
@-webkit-keyframes fader
	    0%
			background-color: rgba(250, 250, 250, 0)

		25%
			background-color: rgba(250, 250, 250, .8)

	    50%
			background-color: rgba(250, 250, 250, .9)

		75%
			background-color: rgba(250, 250, 250, .8)

		100%
			background-color: rgba(250, 250, 250, 0)

/* Standard syntax */
@keyframes fader
		0%
			background-color: rgba(250, 250, 250, 0)

		25%
			background-color: rgba(250, 250, 250, .8)

		50%
			background-color: rgba(250, 250, 250, .9)

		75%
			background-color: rgba(250, 250, 250, .8)

		100%
			background-color: rgba(250, 250, 250, 0)



@-webkit-keyframes fadein
		0%
			opacity: 0

		25%
			opacity: 1

		50%
			opacity: 1

		75%
			opacity: 0.8

		100%
			opacity: 0


/* Standard syntax */
@keyframes fadein
		0%
			opacity: 0

		25%
			opacity: 1

		50%
			opacity: 1

		75%
			opacity: 0.8

		100%
			opacity: 0
