/* Format X and Y Axis */
.home-chart-axis
	display none
	width 5px
	fill none
	stroke black
	shape-rendering crispEdges

.axis text
	font-family sans-serif
	font-size 11px

#wrapper
	min-height 100%
	position relative



#heading-holder
	background-color white
	width 380px
	height 285px
	margin-left 40px
	border-radius 10px
	margin-top 30px
	padding-top 25px
	padding-left 25px
	opacity .9
	padding-right 25px
	// padding-bottom 35px

#heading-holder h1
	margin 0
	color black
	padding 0
	margin-top 0
	line-height 20px
	margin-left 0 auto
	text-align center

#heading-holder i
	margin-left 40px
	margin-right 40px
	margin-top 20px

#heading-holder hr
	margin-top 15px

#visualize
	font-weight 400
	font-size 1.8em

#your-family
	font-size 3.0em

#main-collage
	width 100%
	z-index -100


#collage-holder
	position relative
	z-index -100
	position relative
	opacity .5

.home-page-footer
	width 100%
	height 50px
	position absolute
	bottom 0
	background-color #0072bc
	color white
	text-align center

.home-page-footer i
	margin-left 10px
	margin-right 10px
	margin-top 10px

.home-page-footer i:hover
	cursor pointer

#fade-background
	width 100%
	height 58vh
	position absolute
	top 0px
	right 0px
	background-color rgba(250, 250, 250, .8)
	-webkit-animation-name fader
	animation-name fader
	animation-duration 3s
	-webkit-animation-duration 3s

#chart-holder
	border-left 4px solid black
	border-bottom 4px solid black
	width 600px
	height 250px
	top 80px
	right 60px
	position absolute
	-webkit-animation-name fadein
	animation-name fadein
	animation-duration 6s
	-webkit-animation-duration 6s

#home-page-chart
	width 300px



/* Chrome, Safari, Opera */
@-webkit-keyframes fader
	    0%
			background-color: rgba(250, 250, 250, 0)

	    100%
			background-color: rgba(250, 250, 250, .8)


/* Standard syntax */
@keyframes fader
	    0%
			background-color: rgba(250, 250, 250, 0)

	    100%
			background-color: rgba(250, 250, 250, .8)



@-webkit-keyframes fadein
	    0%
			opacity: 0

	    100%
			opacity: 1


/* Standard syntax */
@keyframes fadein
		0%
			opacity: 0

		100%
			opacity: 1
